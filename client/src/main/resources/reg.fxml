<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import java.net.URL?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<VBox fx:controller="RegController"
      xmlns:fx="http://javafx.com/fxml" alignment="center">

  <stylesheets>
    <URL value="@/css/style.css"/>
  </stylesheets>

  <TextField fx:id="loginField" minHeight="NaN" promptText="Login..."/>
  <PasswordField fx:id="passwordField" minHeight="NaN" promptText="Password..."/>
  <TextField fx:id="nicknameField" minHeight="NaN" promptText="Nickname..."/>
  <TextArea fx:id="textArea" VBox.vgrow="ALWAYS" editable="false"/>

  <Button text="Reg" HBox.hgrow="NEVER" minWidth="70" onAction="#tryToReg"/>


</VBox>
